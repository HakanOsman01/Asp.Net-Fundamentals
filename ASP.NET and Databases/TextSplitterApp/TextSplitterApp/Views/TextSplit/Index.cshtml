@model TextSplitViewModel
@{
    ViewData["Title"] = "Split Text";
}
<form asp-controller="TextSplit" asp-action="Split" method="post">
    <div class="col-12">
        <input asp-for="@Model.Text" class="mr-2" />
        <button type="submit" class="btn btn-primary">Split Text</button>
        <br />
        <span asp-validation-for="@Model.Text" class="small text-danger col-2"></span>
    </div>
    <div class="col-2 mt-3">
        <textarea rows="10">@Model.SplitText</textarea>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}